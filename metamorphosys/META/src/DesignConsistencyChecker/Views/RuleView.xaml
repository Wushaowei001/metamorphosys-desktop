            <Rectangle HorizontalAlignment="Stretch" Margin="10,4,10,4" Stroke="DarkGray" Height="5" Fill="{StaticResource Fff}" Grid.Row="2"></Rectangle>
            
            <StackPanel Grid.Row="3">
